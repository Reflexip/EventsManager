<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pamo.eventsmanager.activities.mainActivities.LogInActivity">

    <EditText
        android:id="@+id/PasswordField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_above="@+id/log_in_btn"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/log_in_btn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log in"
        android:layout_above="@+id/register_label"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="62dp"
        android:onClick="logIn"/>

    <TextView
        android:id="@+id/password_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password:"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/PasswordField" />

    <TextView
        android:id="@+id/register_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Have no account?"
        android:layout_above="@+id/register_btn"
        android:layout_toStartOf="@+id/log_in_btn"
        android:layout_marginEnd="14dp" />

    <Button
        android:id="@+id/register_btn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:onClick="goSetPassword"
        android:text="REGISTER"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/login_label" />

    <EditText
        android:id="@+id/LoginField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/password_label"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="52dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/login_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/LoginField"
        android:layout_alignStart="@+id/LoginField"
        android:layout_marginBottom="12dp"
        android:text="Login:" />
</RelativeLayout>
